{
  "name": "fusebar",
  "author": {
    "name": "Daniel F. Dickinson",
    "email": "cshored@thecshore.com",
    "url": "https://www.thecshore.com"
  },
  "version": "1.0.0",
  "description": "Dynamic search screen using PlainFuse as backend",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cshoredaniel/fusebar"
  },
  "homepage": "https://www.thecshore.com/projects/fusebar",
  "keywords": [
    "fuzzy",
    "bitap",
    "search",
    "standalone"
  ],
  "main": "dist/fusebar.js",
  "scripts": {
    "clean": "rimraf ./dist ./work",
    "pretest": "npm run testbuild",
    "test": "jest",
    "prebuild": "npm run clean; npm run makedirs; npm run lint",
    "pretestbuild": "npm run build",
    "lint": "eslint --max-warnings 0 src",
    "buildfusebar": "concat -o ./dist/fusebar.js ./node_modules/plainfuse/dist/plainfuse.js ./src/fusebar-main.js",
    "testbuild": "concat -o ./work/fusebar.test.js ./dist/fusebar.js ./test/fusebar.test.js",
    "build": "npm run buildfusebar",
    "makedirs": "mkdir -p ./work ./dist"
  },
  "devDependencies": {
    "concat": "^1.0.3",
    "eslint": "^6.8.0",
    "handlebars": "^4.3.0",
    "jest": "^24.3.1",
    "mixin-deep": "^1.3.2",
    "rimraf": "^2.6.3",
    "set-value": "^2.0.1"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "plainfuse": "^1.0.5"
  }
}
